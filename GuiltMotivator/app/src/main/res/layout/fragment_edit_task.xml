<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/fab_margin"
    tools:context="nielsen.guiltmotivator.EditTaskFragment">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"         >

        <TextView
            style="@style/TitleFont"
            android:layout_width="0dp"
            android:id="@+id/taskName"
            android:hint="@string/taskNameHint"
            android:layout_weight="0.54"/>

        <ImageButton
            style="@style/TypicalImageButton"
            android:contentDescription="@string/cd_edit"
            android:src="@drawable/ic_edit"
            android:id="@+id/editButton" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/NormalFont"
            android:layout_width="0dp"
            android:id="@+id/tvDueDate"
            android:layout_weight="1" />

        <ImageButton
            style="@style/TypicalImageButton"
            android:contentDescription="@string/cd_edit"
            android:src="@drawable/ic_edit"
            android:id="@+id/editDueDate" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TitleFont"
            android:layout_width="0dp"
            android:text="@string/contact"
            android:id="@+id/Contact"
            android:layout_weight="1" />

        <ImageButton
            style="@style/TypicalImageButton"
            android:contentDescription="@string/cd_add"
            android:src="@drawable/ic_add"
            android:layout_gravity="end"
            android:id="@+id/addContact" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:id="@+id/contactlist" />

</LinearLayout>
