<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nielsen.guiltmotivator.SettingsFragment">

    <TextView
        android:text="@string/chooseColor"
        style="@style/TitleFont"
        android:id="@+id/chooseColorTitle" />

    <RadioGroup
        android:id="@+id/radio_group_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/chooseColorTitle">

        <RadioButton
            android:text="Default"
            style="@style/NormalFont"
            android:id="@+id/default_color"
            />

        <RadioButton
            android:text="Red"
            style="@style/NormalFont"
            android:id="@+id/red"
            />

        <RadioButton
            android:text="Blue"
            style="@style/NormalFont"
            android:id="@+id/blue"
            android:layout_below="@+id/red"
            />

        <RadioButton
            android:text="Green"
            style="@style/NormalFont"
            android:id="@+id/green"
            android:layout_below="@+id/blue"
            />

    </RadioGroup>

    <TextView
        android:text="@string/chooseTone"
        style="@style/TitleFont"
        android:id="@+id/choosePolitenessTitle"
        android:layout_below="@id/radio_group_color"/>

    <RadioGroup
        android:id="@+id/radio_group_tone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/choosePolitenessTitle">
        
        <RadioButton
            android:text="@string/polite"
            style="@style/NormalFont"
            android:id="@+id/polite"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:text="@string/profane"
            style="@style/NormalFont"
            android:id="@+id/profane"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>


</RelativeLayout>